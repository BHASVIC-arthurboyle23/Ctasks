#include <stdio.h>
int num,x, output;

int main() {
    printf("Please enter a number: ");
    scanf("%d", &num);
    output = number(num);
    printf("%d", output);
}
int number(num){
    if (num <= 1){
        return 1;
        printf("%d", num);
        printf("y");
    }
    else{
        return num + number(num-1);
        printf("%d", num);
        printf("n");
    }
}
